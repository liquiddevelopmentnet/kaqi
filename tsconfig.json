{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowJs": true,
		"outDir": "./dist",
		"declaration": true,
		"resolveJsonModule": true,
		"typeRoots": ["./node_modules/@types"]
	},
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
